@model WebTIGA.Models.UsuarioModuloRol

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout_Administrador.cshtml";
    string modulo = ViewBag.modulo;
    string nombre = ViewBag.userN;
    string rol= ViewBag.rol;
    int? estado = ViewBag.estado;
}


<body>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-dark">ADMINISTRADOR DE ROLES</h6>
        </div>

        <div class="card-body">
            <div class="col-lg-auto">
                <div>
                    <h6 class="m-0 font-weight-bold text-dark">DETALLE  DE USUARIO</h6>
                    <hr />
                    <dl class="dl-horizontal">


                        <div class="form-group">
                            @Html.LabelFor(model => model.Usuario, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBox("userN", null, new { style = "text-transform:uppercase ", @class = "form-control", value = "userN", @disabled = "disabled" })


                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ModuloRol.Modulo, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBox("modulo", null, new { style = "text-transform:uppercase", @class = "form-control", value = "modulo", @disabled = "disabled" })

                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ModuloRol.Rol, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBox("rol", null, new { style = "text-transform:uppercase", @class = "form-control", value = "modulo", @disabled = "disabled" })

                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBox("estado", null, new { style = "text-transform:uppercase", @class = "form-control", value = "modulo", @disabled = "disabled" })

                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                @Html.ActionLink("Editar", "Edit", new { id = Model.ID }, new { @class = "btn btn-info " })
                                <a href="@Url.Action("Administrador_U","AdministradorUsuarios")" class="btn btn-secondary" id="btnReturn">Retornar</a>

                            </div>

                        </div>

                       


                    </dl>
                </div>
              
            </div>
        </div>
    </div>

</body>