@model WebTIGA.Models.ContenedorModelos
@using WebTIGA;

@{
    Layout = "~/Views/Shared/_Layout_Administrador.cshtml";
    ViewBag.Title = "Administrador_Modulos";

    ViewBag.message = "";


}

<html>
<head>

    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
    <script type="text/javascript" language="javascript" src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>


    <script>
        $(document).ready(function () {
            $('#example1').DataTable();
        });
    </script>


</head>
<body>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-dark">ADMINISTRADOR DE MODULOS</h6>
        </div>
        <div class="card-body">

            <div class="col-lg-12">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="example1" width="100%" cellspacing="0">

                            <thead>
                                <tr>
                                    <th style="text-align:center">Modulos</th>
                                    <th style="text-align:center">Administrador</th>
                                    <th style="text-align:center">Gestor de Equipo </th>
                                    <th style="text-align:center; width:280px;">Recurso</th>
                                    <th style="text-align:center; width:280px;"></th>
                                </tr>

                            <thead>



                            <tbody>


                                @foreach (var i in Model.VIEW_WT_ADMIN_MODULO_ROL)
                                {

                                <tr>
                                    <td style="text-align:center">
                                        @i.Modulos
                                    </td>
                                    <td style="text-align:center">
                                        @if (@i.Administrador == 1)
                                        {
                                            <div class="custom-control custom-switch">
                                                <input type="checkbox" class="custom-control-input" id="customSwitch1" checked>
                                                <label class="custom-control-label" for="customSwitch1"></label>
                                            </div>

                                        }
                                        else
                                        {
                                            <div class="custom-control custom-switch">
                                                <input type="checkbox" class="custom-control-input" id="customSwitch1">
                                                <label class="custom-control-label" for="customSwitch1"></label>
                                            </div>
                                        }



                                    </td>


                                    <td style="text-align:center">

                                        @if (@i.Gestor_de_Equipo == 1)
                                        {
                                            <div class="custom-control custom-switch">
                                                <input type="checkbox" class="custom-control-input" id="customSwitch2" checked>
                                                <label class="custom-control-label" for="customSwitch2"></label>
                                            </div>

                                        }
                                        else
                                        {
                                            <div class="custom-control custom-switch">
                                                <input type="checkbox" class="custom-control-input" id="customSwitch2">
                                                <label class="custom-control-label" for="customSwitch2"></label>
                                            </div>
                                        }

                                    </td>

                                    <td style="text-align:center">

                                        @if (@i.Recurso == 1)
                                        {
                                            <div class="custom-control custom-switch">
                                                <input type="checkbox" class="custom-control-input" id="customSwitch3" checked>
                                                <label class="custom-control-label" for="customSwitch3"></label>
                                            </div>

                                        }
                                        else
                                        {
                                            <div class="custom-control custom-switch">
                                                <input type="checkbox" class="custom-control-input" id="customSwitch3">
                                                <label class="custom-control-label" for="customSwitch3"></label>
                                            </div>
                                        }
                                    <td style="text-align:center">
                                        @*@Html.ActionLink("Editar", "Edit", new { }, new { @class = "btn btn-warning " }) |
                                        @Html.ActionLink("Details", "Details", new { }, new { @class = "btn btn-info" }) |*@
                                        @Html.ActionLink("Guardar", "Edit", new { }, new { @class = "btn btn-warning" })



                                    </td>
                                </tr>



                                }
                            <tbody>




                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>



</body>
</html>



