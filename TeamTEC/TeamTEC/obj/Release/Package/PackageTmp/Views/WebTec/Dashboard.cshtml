<script>
        function llamarVistaParcial() {
            var laURLDeLaVista = '@Url.Action("Detalle_error_fases_distribucion", "WebTec")';
            $.ajax({
                cache: false,
                async: true,
                type: "GET",
                url: laURLDeLaVista,
                data: {},
                success: function (response) {
                    $('#resultado').html('');
                    $('#resultado').html(response);
                }
            });
        }
</script>